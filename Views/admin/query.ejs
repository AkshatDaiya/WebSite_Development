<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/css/style.css">
    <title>Dashboard</title>
</head>

<body>
    <%- include('../../Partials/admin/header.ejs')%>

        <section id="mid">
            <div class="container">
                <div class="row">
                    <%- include('../../Partials/admin/left.ejs')%>
                        <div class="col-md-9">
                            <h2 class="text-center">Query Management</h2>
                            <table class="table table-hover">
                                <tr>
                                    <th>
                                        <h6>S.No</h6>
                                    </th>
                                    <th>
                                        <h6>User Query</h6>
                                    </th>
                                    <th>
                                        <h6>User Email</h6>
                                    </th>
                                    <th>
                                        <h6>Status</h6>
                                    </th>
                                    <th>
                                        <h6>Replay</h6>
                                    </th>
                                    <th></th>
                                </tr>

                                <%record.forEach((result,key)=>{%>
                                    <tr>
                                        <td>
                                            <%=key+1%>
                                        </td>
                                        <td>
                                            <%=result.query%>
                                        </td>
                                        <td>
                                            <%=result.email%>
                                        </td>
                                        <td>
                                            <%=result.status%>
                                        </td>
                                        <%if(result.status==='Replied'){%>
                                            <td><a href="/admin/emailReplay/<%=result.id%>"><button
                                                        disabled>Replied</button></a>
                                            </td>
                                            <%}else{%>
                                                <td><a
                                                        href="/admin/emailReplay/<%=result.id%>"><button>Reply</button></a>
                                                </td>
                                                <%}%>

                                                    <td><a href="/admin/deleteQuary/<%=result.id%>"><i
                                                                class="bi bi-trash3"></i></a></td>
                                    </tr>
                                    <%})%>

                            </table>
                        </div>
                </div>
            </div>
        </section>

        <%- include('../../Partials/admin/footer.ejs')%>
</body>

</html>
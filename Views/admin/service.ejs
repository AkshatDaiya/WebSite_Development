<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/css/style.css">
    <title>Dashboard</title>
</head>

<body>
    <%- include('../../Partials/admin/header.ejs')%>

        <section id="mid">
            <div class="container">
                <div class="row">
                    <%- include('../../Partials/admin/left.ejs')%>
                        <div class="col-md-9">
                            <h2 class="text-center">Service Management</h2>
                            <table class="table table-hover">
                                <tr>
                                    <th colspan="3" class="text-center">Service Dashboard</th>
                                </tr>
                                <tr>
                                    <td>
                                        <h5>Total Service: <%=tService%>
                                        </h5>
                                    </td>
                                    <td>
                                        <h5>Total Published: <%=tPublished%>
                                        </h5>
                                    </td>
                                    <td>
                                        <h5>Total Unpublished: <%=tUnpublished%>
                                        </h5>
                                    </td>
                                </tr>
                            </table>

                            <form action="" method="post">
                                <label for="">Select One Status</label>
                                <select name="SelectStatus" id="" class="form-select">
                                    <option value="">Select Status</option>
                                    <option value="Published">Publish</option>
                                    <option value="Unpublished">Unpublish</option>
                                </select>
                                <button type="submit"
                                    class="btn btn-outline-danger mt-2 mb-4 form-control">Search</button>
                            </form>

                            <a href="/admin/serviceForm" class="text-decoration-none text-dark"><button
                                    class="btn btn-outline-warning form-control">Add More Servise</button></a>
                            <table class="table table-hover">
                                <tr>
                                    <th>
                                        <h5>S.No</h5>
                                    </th>
                                    <th>
                                        <h5>Title</h5>
                                    </th>
                                    <th>
                                        <h5>Image</h5>
                                    </th>
                                    <th>
                                        <h5>Details</h5>
                                    </th>
                                    <th>
                                        <h5>Posted Date</h5>
                                    </th>
                                    <th>
                                        <h5>Status</h5>
                                    </th>
                                    <th>
                                        <h5>Delete</h5>
                                    </th>
                                </tr>
                                <%record.forEach((result,key)=>{%>
                                    <tr>
                                        <td>
                                            <%=key+1%>
                                        </td>
                                        <td>
                                            <%=result.title%>
                                        </td>

                                        <td>
                                            <img src="/upload/<%=result.img%>" class="width" alt="">
                                        </td>

                                        <td>
                                            <%=result.details%>
                                        </td>

                                        <td>
                                            <%=result.postedDate%>
                                        </td>

                                        <%if(result.status==='Published'){%>
                                            <td>
                                                <a href="/admin/serviceStatusUpdate/<%=result.id%>"><button
                                                        class="btn btn-success">
                                                        <%=result.status%>
                                                    </button></a>
                                            </td>
                                            <%}else{%>
                                                <td>
                                                    <a href="/admin/serviceStatusUpdate/<%=result.id%>"><button
                                                            class="btn btn-danger">
                                                            <%=result.status%>
                                                        </button></a>
                                                </td>
                                                <%}%>

                                                    <td><a href="/admin/serviceDelete/<%=result.id%>"><i
                                                                class="bi bi-trash3"></i></a>
                                                    </td>
                                    </tr>
                                    <%})%>
                                        <%if(record.length===0){%>
                                            <tr>
                                                <td colspan="7">
                                                    <h2 class="text-center">No Record Found</h2>
                                                </td>
                                            </tr>
                                            <%}%>
                            </table>
                        </div>
                </div>
            </div>
        </section>

        <%- include('../../Partials/admin/footer.ejs')%>
</body>

</html>
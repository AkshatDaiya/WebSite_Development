<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/css/style.css">
    <title>Dashboard</title>
</head>

<body>
    <%- include('../../Partials/admin/header.ejs')%>

        <section id="mid">
            <div class="container">
                <div class="row">
                    <%- include('../../Partials/admin/left.ejs')%>
                        <div class="col-md-9">
                            <h2 class="text-center">Testimonial Page</h2>
                            <table class="table table-hover">
                                <tr>
                                    <th colspan="3">
                                        <h4 class="text-center">DashBoard</h4>
                                    </th>
                                </tr>
                                <tr>
                                    <th>
                                        <h5>Total: <%=testiCount%>
                                        </h5>

                                    </th>
                                    <th>
                                        <h5>Published: <%=testiPubCount%>
                                        </h5>

                                    </th>
                                    <th>
                                        <h5>Unpublished: <%=testiUnpubCount%>
                                        </h5>

                                    </th>
                                </tr>
                            </table>

                            <form action="" method="post">
                                <label for="">Select One Status</label>
                                <select name="search" class="form-select">
                                    <option value="Select Option">Select Status</option>
                                    <option value="Published">Publish</option>
                                    <option value="Unpublished">Unpublish</option>
                                </select>
                                <button type="submit"
                                    class="btn btn-outline-danger form-control mt-2 mb-4">Search</button>
                            </form>

                            <table class="table table-hover">
                                <tr>
                                    <th>S.No</th>
                                    <th>User Image</th>
                                    <th>Quotes</th>
                                    <th>Name/Company</th>
                                    <th>Posted Date</th>
                                    <th>Status</th>
                                    <th>Delete</th>
                                </tr>
                                <%record.forEach((result,key)=>{%>
                                    <tr>
                                        <td>
                                            <%=key+1%>
                                        </td>
                                        <td><img src="/upload/<%=result.img%>"></td>
                                        <td>
                                            <%=result.details%>
                                        </td>
                                        <td>
                                            <%=result.name%>
                                        </td>
                                        <td>
                                            <%=result.postedDate%>
                                        </td>
                                        <%if(result.status==='Unpublished'){%>
                                            <td><a href="/admin/testiStatusUpdate/<%=result.id%>"><button
                                                        class="btn btn-danger">
                                                        <%=result.status%>
                                                    </button></a>
                                            </td>
                                            <%}else{%>
                                                <td><a href="/admin/testiStatusUpdate/<%=result.id%>"><button
                                                            class="btn btn-success">
                                                            <%=result.status%>
                                                        </button></a>
                                                </td>
                                                <%}%>

                                                    <td><a href="/admin/testiDelete/<%=result.id%>"><i
                                                                class="bi bi-trash3"></i></a>
                                                    </td>
                                    </tr>
                                    <%})%>

                                        <%if(record.length===0){%>
                                            <tr>
                                                <td colspan="7" class="text-center">
                                                    <h2>No Record Found</h2>
                                                </td>
                                            </tr>
                                            <%}%>
                            </table>
                        </div>
                </div>
            </div>
        </section>

        <%- include('../../Partials/admin/footer.ejs')%>
</body>

</html>